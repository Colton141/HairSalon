@using HairSalonList.Models;

<h1>Client Details: </h1>

<h2>@Model["client"].Name</h2>
<h3>Stylist: @Model["stylist"].Name</h3>

<form action="/stylists/@Model["stylist"].Id/clients/@Model["client"].Id/delete" method="post">
  <button type="submit" name="button">Remove This Client</button>
</form>

<a href='/stylists/@Model["stylist"].Id/clients/@Model["client"].Id/edit'>Edit this Client</a>
<a href='/stylists/@Model["stylist"].Id/clients/new'>Add another client</a>
<a href='/stylists'>View all stylists</a>
